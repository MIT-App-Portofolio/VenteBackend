@page
@model Server.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<div class="hero">
    <div class="hero-content">
        <div class="card w-96 bg-base-100 shadow-xl">
            <div class="card-body items-center text-center">
                <h2 class="card-title">Cerrar sesión</h2>
                <form method="post">
                    <button type="submit" class="btn btn-danger w-full">Cerrar sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>