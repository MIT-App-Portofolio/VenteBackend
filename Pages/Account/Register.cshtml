@page
@model Server.Pages.Account.RegisterModel
@{
}

<div class="hero">
    <div class="hero-content">
        <div class="card w-96 bg-base-100 shadow-xl">
            <div class="card-body items-center text-center">
                <h2 class="card-title">Register</h2>

                <form method="post">
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    <label class="input input-bordered flex items-center gap-2 mb-3">
                        <input asp-for="Input.UserName" class="grow" placeholder="Username" required />
                    </label>

                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <label class="input input-bordered flex items-center gap-2 mb-3">
                        <input asp-for="Input.Email" class="grow" placeholder="Email" type="email" required />
                    </label>

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <label class="input input-bordered flex items-center gap-2 mb-3">
                        <input asp-for="Input.Password" class="grow" placeholder="Password" type="password" required />
                    </label>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <button type="submit" class="btn btn-primary w-full">Register</button>
                </form>

                <p class="mt-4">Already have an account? <a asp-page="/Account/Login" class="text-blue-500">Login
                        here</a></p>
            </div>
        </div>
    </div>
</div>