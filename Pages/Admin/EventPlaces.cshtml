@page "{pageId:int}"
@model Server.Pages.Admin.EventPlacesModel
@{
}

<div class="hero">
    <div class="hero-content">
        <div class="card w-96 bg-base-100 shadow-xl">
            <div class="card-body items-center text-center">
                <h2 class="card-title">Event Places</h2>

                <table class="table w-full">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Location</th>
                            <th>Price Range</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var place in Model.EventPlaces)
                        {
                            <tr>
                                <td>@place.Name</td>
                                <td>@place.Description</td>
                                <td>@place.Location</td>
                                <td>@place.PriceRangeBegin - @place.PriceRangeEnd</td>
                                <td>
                                    <a asp-page="/Admin/EditEventPlace" asp-route-id="@place.Id" class="btn btn-primary">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="btn-group">
                    <a href="/Admin/EventPlaces/@(Model.PageId - 1)" class="btn btn-primary" @(Model.PageId <= 1 ? "disabled" : "")>Previous</a>
                    <a href="/Admin/EventPlaces/@(Model.PageId + 1)" class="btn btn-primary">Next</a>
                </div>
            </div>
        </div>
    </div>
</div>
