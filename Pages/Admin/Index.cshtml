@page
@model Server.Pages.Admin.IndexModel
@{
}

<div class="hero">
    <div class="hero-content">
        @if (!User.Identity.IsAuthenticated)
        {
            <form method="post" class="min-w-96 justify-stretch">
                <h2 class="text-2xl mb-4">Log in</h2>

                <span asp-validation-for="Input.Password"></span>
                <label class="input input-bordered flex items-center gap-2 mb-3">
                    <input type="password" class="grow" asp-for="Input.Password" value="password"/>
                </label>

                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary w-full">Log In</button>
            </form>
        }
        else
        {
            <div class="card w-96 bg-base-100 shadow-xl">
                <div class="card-body items-center text-center">
                    <h2 class="card-title">Welcome Admin!</h2>
                    <p>You are now logged into the admin dashboard.</p>
                </div>
            </div>
        }
    </div>
</div>