@page
@model Server.Pages.Affiliate.EditEventPlaceModel
@using Server.Data
@{
}

<div class="hero">
    <div class="hero-content">
        <div class="card w-96 bg-base-100 shadow-xl">
            <div class="card-body items-center text-center">
                <h2 class="card-title">Editar su lugar de eventos</h2>

                <form method="post">
                    <span asp-validation-for="EventPlace.Name" class="text-danger"></span>
                    <label class="input input-bordered flex items-center gap-2 mb-3">
                        <input asp-for="EventPlace.Name" class="grow" placeholder="Nombre" />
                    </label>

                    <span asp-validation-for="EventPlace.Description" class="text-danger"></span>
                    <label class="input input-bordered flex items-center gap-2 mb-3">
                        <input asp-for="EventPlace.Description" class="grow" placeholder="Descripcion" />
                    </label>

                    <span asp-validation-for="EventPlace.Location" class="text-danger"></span>
                    <select asp-for="EventPlace.Location" class="select select-bordered w-full mb-3"
                            asp-items="Html.GetEnumSelectList<Location>()"></select>

                    <span asp-validation-for="EventPlace.PriceRangeStart" class="text-danger"></span>
                    <label class="input input-bordered flex items-center gap-2 mb-3">
                        <input asp-for="EventPlace.PriceRangeStart" class="grow" placeholder="Rango de precio minimo" />
                    </label>

                    <span asp-validation-for="EventPlace.PriceRangeEnd" class="text-danger"></span>
                    <label class="input input-bordered flex items-center gap-2 mb-3">
                        <input asp-for="EventPlace.PriceRangeEnd" class="grow" placeholder="Rango de precio maximo" />
                    </label>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <button type="submit" class="btn btn-primary w-full">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>
