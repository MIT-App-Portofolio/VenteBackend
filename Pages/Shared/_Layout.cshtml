<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Descubre qué hacer y con quién salir con Vente: la app que te muestra eventos, ofertas y personas en tu zona según fecha y lugar. Ideal para planes espontáneos y noches divertidas.">
    <title>@ViewData["Title"] - Vente!</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8TTSQMWY0R"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-8TTSQMWY0R');
    </script>
</head>

<body>
    <header>
        <nav class="navbar bg-base-100">
            <a class="navbar-start" asp-page="/Index">
                Vente
            </a>
            <div class="navbar-center">
                <ul class="menu menu-horizontal px-1">
                    <li>
                        <a asp-page="/Index">Índice</a>
                    </li>
                    <li>
                        <a asp-page="/Privacy">Privacidad</a>
                    </li>
                </ul>
            </div>
            <div class="navbar-end">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-page="/Dashboard">
                        <button class="btn btn-outline btn-primary">Panel de control</button>
                    </a>
                    <a asp-page="/Account/Logout">
                        <button class="btn btn-outline btn-danger">Cerrar sesión</button>
                    </a>
                }
                else
                {
                    <div class="flex-row">
                        <a asp-page="/Account/Login">
                            <button class="btn btn-outline btn-secondary">
                                Afiliados
                            </button>
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="min-h-screen flex flex-col justify-between">
        <section class="flex-grow">
            @RenderBody()
        </section>
        <footer class="footer footer-center">
            <p>
                &copy; 2025 - Vente
            </p>
        </footer>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>