@page
@model Server.Pages.User.Index

@{ }

<dialog class="modal" id="delete_account_modal">
    <div class="modal-box">
        <h3 class="text-lg font-bold">¿Estás seguro que quieres eliminar tu cuenta?</h3>
        <p>Este cambio es permamente.</p>

        <br/>

        <div class="modal-action">
            <form method="dialog">
                <button class="btn btn-primary">Cancelar</button>
            </form>
            <form method="post" asp-route-handler="DeleteAccount">
                <button class="btn btn-outline btn-error" type="submit">Eliminar</button>
            </form>
        </div>
    </div>
</dialog>


<div class="hero">
    <div class="hero-content flex flex-col">
        <h2 class="text-2xl">Panel de usuario</h2>
        <div class="flex flex-row">
            @if (Model.Name != null)
            {
                <p>@Model.Name</p>
            }
            <p>@@@Model.UserName</p>
        </div>
        <p>@Model.Email</p>
        
        <button class="btn btn-error btn-outline" onclick="delete_account_modal.showModal()">Eliminar cuenta</button>
    </div>
</div>
